[MAIN]
fail-under=9.5

[FORMAT]
max-line-length=128   # Longer lines
max-module-lines=2048 # Longer modules

[DESIGN]
max-locals=42                 # Variables per function
max-statements=128            # Statements per function
max-args=16                   # Arguments per function
max-positional-arguments=16   # Positional arguments per function
max-attributes=32             # Attributes per class
max-branches=16               # Branches per function
max-public-methods=32         # Public methods per class

[MESSAGES CONTROL]
disable=
    protected-access,
    too-few-public-methods,
    format,
    fixme,
    trailing-whitespace,
    invalid-name,
    import-error,
    duplicate-code